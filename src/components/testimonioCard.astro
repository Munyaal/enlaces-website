---
import Star from "../assets/svg/star.svg";
const { name, message, foto, rol } = Astro.props;
---

<div class="flex flex-col  mt-20">
<div
    class="w-[340px] lg:w-[400px] h-[290px] bg-light rounded-3xl border-2 shadow-lg p-5 sm:p-7"
  >
    <p class="text-lg text-black  text-justify my-5">{message}</p>
    <div class="flex gap-3">
    <img
      src={foto}
      alt={name}
      class="rounded-full w-14 h-14  border-2 border-line object-cover"
    />
    <div class="text-left justify-center">
    <h1 class="text-base sm:text-lg font-bold text-black ">{name}</h1>
    <h3 class="text-black text-xs">{rol}</h3>
    </div>
    </div>
  </div>
  </div>
</div>
