---
type DescriptionProps = {
   info: {
      titleColor: string;
      title: string;
      subtitle: string;
      description: string;
   };
};

const { info } = Astro.props as DescriptionProps;
---

<section class="container mx-auto px-4 lg:px-50 py-8">
   <div class="text-center -rotate-2 my-10">
      <h1 class="text-2xl md:text-5xl">
         {info.title}
         <br />
         <span
            class={`text-${info.titleColor} text-5xl md:text-7xl font-bold text-shadow-lg/30 text-shadow-${info.titleColor}`}
            >{info.subtitle}</span
         >
      </h1>
   </div>
   <p
      class="text-xl sm:text-2xl text-center leading-10"
      set:html={info.description}
   />
</section>
