---

const icon = [
  {
    icono: "/images/atencion-blanco.png",
    text: "Atención rápida",
    alt: "Atención Cliente",
  },
  {
    icono: "/images/soporte-blanco.png",
    text: "Soporte técnico",
    alt: "Soporte Técnico",
  },
  {
    icono: "/images/velocidad-blanco.png",
    text: "Internet veloz & estable",
    alt: "Velocidad",
  },
];
---

<section>
  <!-- Título -->
  <div class="text-center pt-10 md:py-20 px-4">
    <h1 class="text-3xl md:text-6xl">¡CONOCE</h1>
    <h2 class="text-4xl md:text-7xl font-bold">NUESTRA OFICINA!</h2>
    <h2 class="text-2xl md:text-3xl">Da click para ver nuestra ubicación</h2>
  </div>

  <div
    class="flex flex-col lg:flex-row items-center justify-center gap-8 px-4 relative lg:py-10 pb-10 lg:pb-30"
  >
    <!-- Imagen -->
    <div class="relative z-10 -mb-10 lg:mb-0 lg:-mt-20 lg:left-20 top-10">
      <a href="#">
        <img
          src="/images/location.png"
          alt="Ubicación Enlaces"
          class="w-full max-w-2xl"
        />
      </a>
    </div>

    <!-- Contenido derecho -->
    <div class="max-w-2xl w-full z-0">
      <div
        class="text-center bg-light text-primary p-5 pt-15 md:pt-20 pb-10 md:pb-20 rounded-t-4xl"
      >
        <h1 class="text-3xl md:text-5xl">Somos</h1>
        <h2 class="text-4xl md:text-7xl font-extrabold">
          UNA EMPRESA 100% LOCAL
        </h2>
      </div>
      <div class="h-[3px] bg-gradient-to-r from-golden1 via-golden2 to-golden3">
      </div>
      <div
        class="flex flex-wrap gap-6 justify-center bg-primary p-8 rounded-b-4xl"
      >
        {
          icon.map((icons) => (
            <div class="flex flex-col items-center w-15 sm:w-24 text-center">
              <img
                src={icons.icono}
                alt={icons.alt}
                class="w-10 h-10 sm:w-20 sm:h-20 object-contain"
              />
              <h3 class="text-sm mt-2 text-light">{icons.text}</h3>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
